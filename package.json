{
  "private": true,
  "name": "svelte-template",
  "description": "Svelte template with ts, jest, eslint, prettier, postcss, etc",
  "scripts": {
    "clean": "rimraf public/*.js*",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --dev --single",
    "lint:eslint": "eslint src --cache --ext .ts,.svelte",
    "lint:prettier": "prettier --check 'src/**/*.{ts,svelte}'",
    "lint:types": "tsc --skipLibCheck --noEmit",
    "lint": "run-s -c lint:*",
    "format:eslint": "eslint src --fix --ext .ts,.svelte",
    "format:prettier": "prettier --write 'src/**/*.{ts,svelte}'",
    "format": "run-s -c format:* lint:types",
    "test": "NODE_ENV=test jest --coverage"
  },
  "dependencies": {
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "^26.4.2",
    "jest-serializer-html": "^7.0.0",
    "npm-run-all": "^4.1.3",
    "postcss": "^8.0.3",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "prettier-plugin-svelte": "^1.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.29.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "sirv-cli": "^0.4.0",
    "svelte": "^3.4.4",
    "svelte-preprocess": "^4.3.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "vue-eslint-parser": "^7.1.0"
  },
  "browserslist": [
    ">0.25%",
    "last 1 version",
    "not ie_mob 11",
    "not ios < 10",
    "not ie < 11",
    "not dead"
  ],
  "jest": {
    "cacheDirectory": "<rootDir>/.jestcache",
    "collectCoverageFrom": [
      "src/**/*.{ts,svelte}",
      "!src/**/node_modules/**",
      "!**/*.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/.jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.(spec|test).ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.svelte$": "<rootDir>/.jest/svelte.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "svelte"
    ],
    "moduleNameMapper": {
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  }
}
